<user-mapping>

    <!-- Set this to each authorized users login and password -->
    <authorize username="admin" password="admin">
        <protocol>vnc</protocol>
        <param name="hostname">localhost</param>
        <param name="port">5900</param>
        <!-- Set this to VNC password -->
        <param name="password">password</param>
        <!-- Change this to true to enable sftp file copying. Requires ssh username and password -->
        <param name="enable-sftp">false</param>
        <param name="sftp-username">username</param>
        <param name="sftp-password">password</param>
        <param name="sftp-port">22</param>
    </authorize>

</user-mapping>